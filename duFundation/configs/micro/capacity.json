{
  "capacity": "micro",
  "description": "Configuração para startups (10K-50K usuários)",
  "users": {
    "concurrent_max": 2500,
    "daily_max": 50000
  },
  "resources": {
    "ram_mb": 1024,
    "cpu_cores": 1,
    "storage_gb": 25,
    "bandwidth_mbps": 25
  },
  "performance": {
    "response_time_target_ms": 150,
    "throughput_rps": 100,
    "availability_target": 99.2,
    "error_rate_threshold": 3.0
  },
  "monitoring": {
    "scrape_interval": "20s",
    "retention_days": 14,
    "alert_thresholds": {
      "cpu_percent": 75,
      "memory_percent": 80,
      "response_time_ms": 300
    }
  },
  "features": {
    "auto_scaling": false,
    "load_balancer": false,
    "clustering": false,
    "caching": "redis",
    "monitoring_level": "intermediate"
  },
  "use_cases": [
    "Startups em crescimento",
    "SaaS pequenos",
    "Apps móveis",
    "APIs internas",
    "E-commerce pequeno"
  ]
}