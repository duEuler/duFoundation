{
  "capacity": "large",
  "description": "Configuração para grandes empresas (500K-1M usuários)",
  "users": {
    "concurrent_max": 100000,
    "daily_max": 1000000
  },
  "resources": {
    "ram_mb": 8192,
    "cpu_cores": 8,
    "storage_gb": 200,
    "bandwidth_mbps": 200
  },
  "performance": {
    "response_time_target_ms": 50,
    "throughput_rps": 1000,
    "availability_target": 99.9,
    "error_rate_threshold": 0.5
  },
  "monitoring": {
    "scrape_interval": "5s",
    "retention_days": 90,
    "alert_thresholds": {
      "cpu_percent": 50,
      "memory_percent": 70,
      "response_time_ms": 100
    }
  },
  "features": {
    "auto_scaling": true,
    "load_balancer": "enterprise",
    "clustering": true,
    "caching": "redis_cluster",
    "monitoring_level": "enterprise",
    "microservices": true,
    "service_mesh": "istio",
    "multi_region": true,
    "cdn": true,
    "security": {
      "waf": true,
      "ddos_protection": true,
      "zero_trust": true,
      "audit_logging": true
    }
  },
  "use_cases": [
    "Grandes empresas",
    "SaaS enterprise",
    "E-commerce enterprise",
    "Plataformas globais",
    "Sistemas mission-critical"
  ]
}