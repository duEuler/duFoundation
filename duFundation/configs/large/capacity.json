{
  "capacity": "medium",
  "description": "Configuração para médias empresas (100K-500K usuários)",
  "users": {
    "concurrent_max": 25000,
    "daily_max": 500000
  },
  "resources": {
    "ram_mb": 4096,
    "cpu_cores": 4,
    "storage_gb": 100,
    "bandwidth_mbps": 100
  },
  "performance": {
    "response_time_target_ms": 75,
    "throughput_rps": 500,
    "availability_target": 99.8,
    "error_rate_threshold": 1.0
  },
  "monitoring": {
    "scrape_interval": "10s",
    "retention_days": 60,
    "alert_thresholds": {
      "cpu_percent": 60,
      "memory_percent": 75,
      "response_time_ms": 150
    }
  },
  "features": {
    "auto_scaling": true,
    "load_balancer": "advanced",
    "clustering": true,
    "caching": "redis_cluster",
    "monitoring_level": "enterprise",
    "microservices": true,
    "service_mesh": "basic"
  },
  "use_cases": [
    "Médias empresas",
    "SaaS em crescimento",
    "E-commerce grande",
    "Aplicações B2B/B2C",
    "Sistemas corporativos"
  ]
}