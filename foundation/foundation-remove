#!/usr/bin/env node

/**
 * Foundation Remove - Comando Global
 * Script de conveni√™ncia para executar o foundation-uninstaller
 */

const fs = require('fs');
const path = require('path');
const { spawn } = require('child_process');

const foundationDir = __dirname;
const uninstallerScript = path.join(foundationDir, 'foundation-uninstaller.cjs');

// Verifica se o script existe
if (!fs.existsSync(uninstallerScript)) {
  console.log('‚ùå Foundation Uninstaller n√£o encontrado');
  console.log('üí° Certifique-se de que a pasta foundation/ existe');
  process.exit(1);
}

// Executa o script de desinstala√ß√£o
console.log('üóëÔ∏è  Executando Foundation Uninstaller...\n');

const child = spawn('node', [uninstallerScript], {
  stdio: 'inherit',
  cwd: foundationDir
});

child.on('close', (code) => {
  process.exit(code);
});

child.on('error', (error) => {
  console.error('‚ùå Erro ao executar Foundation Remover:', error.message);
  process.exit(1);
});